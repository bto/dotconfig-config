[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,-cr-at-eol,space-before-tab
  pager = less -r

[init]
  defaultBranch = main

[color]
  ui = true

[ghq]
  root = ~/src

[push]
  default = simple

[url "git@github.com:"]
  pushInsteadOf = git://github.com/
  pushInsteadOf = https://github.com/

[url "git://github.com/"]
  insteadOf = https://github.com/
